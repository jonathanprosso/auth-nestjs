generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Roles    @default(READER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Roles {
  ADMIN
  READER
  EDITOR
  WRITER
}
